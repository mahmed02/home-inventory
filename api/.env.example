NODE_ENV=development
PORT=4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/home_inventory
ENABLE_DEV_ROUTES=true
REQUIRE_AUTH=false
BASIC_AUTH_USER=
BASIC_AUTH_PASS=
REQUIRE_USER_ACCOUNTS=false
SESSION_TTL_HOURS=720
SESSION_TRANSPORT=bearer
SESSION_COOKIE_NAME=home_inventory_session
SESSION_COOKIE_DOMAIN=
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax
AUTH_RATE_LIMIT_WINDOW_SECONDS=900
AUTH_REGISTER_RATE_LIMIT_MAX=20
AUTH_LOGIN_RATE_LIMIT_MAX=30
AUTH_FORGOT_PASSWORD_RATE_LIMIT_MAX=6
AUTH_RESET_PASSWORD_RATE_LIMIT_MAX=20
AUTH_LOGIN_FAILURE_MAX_ATTEMPTS=6
AUTH_LOGIN_FAILURE_WINDOW_SECONDS=900
AUTH_LOGIN_FAILURE_LOCKOUT_SECONDS=900
EMAIL_PROVIDER=log
EMAIL_FROM=
EMAIL_REPLY_TO=
EMAIL_RESEND_API_KEY=
CORS_ALLOW_ORIGINS=
SEARCH_PROVIDER=pinecone
SEMANTIC_CACHE_ENABLED=true
SEMANTIC_CACHE_FRESH_SECONDS=300
SEMANTIC_CACHE_STALE_IF_ERROR_SECONDS=86400
SIRI_REQUIRE_MUTATION_CONFIRMATION=true

# Pinecone (required when SEARCH_PROVIDER=pinecone)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=
PINECONE_INDEX_HOST=
PINECONE_NAMESPACE=home-inventory
PINECONE_TEXT_FIELD=chunk_text
PINECONE_RERANK_MODEL=

# Public base URL used by clients/shortcuts in deployed environments
APP_BASE_URL=http://localhost:4000

# AWS deployment baseline
AWS_REGION=us-east-1
S3_BUCKET=home-inventory-photos-dev

# Use IAM role in EC2/ECS when possible. If not using role-based auth, set keys:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
