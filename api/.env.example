NODE_ENV=development
PORT=4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/home_inventory
ENABLE_DEV_ROUTES=true
REQUIRE_AUTH=false
BASIC_AUTH_USER=
BASIC_AUTH_PASS=
REQUIRE_USER_ACCOUNTS=false
SESSION_TTL_HOURS=720
CORS_ALLOW_ORIGINS=
SEARCH_PROVIDER=pinecone
SIRI_REQUIRE_MUTATION_CONFIRMATION=true

# Pinecone (required when SEARCH_PROVIDER=pinecone)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=
PINECONE_INDEX_HOST=
PINECONE_NAMESPACE=home-inventory
PINECONE_TEXT_FIELD=chunk_text
PINECONE_RERANK_MODEL=

# Public base URL used by clients/shortcuts in deployed environments
APP_BASE_URL=http://localhost:4000

# AWS deployment baseline
AWS_REGION=us-east-1
S3_BUCKET=home-inventory-photos-dev

# Use IAM role in EC2/ECS when possible. If not using role-based auth, set keys:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
